<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.com.newnav1.DeliveryManActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1f3aa8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="معلومات عن المندوب"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:hint="معلومات عن المندوب"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="29dp" />

    <TextView
        android:text="أحمد"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/back_nam"
        android:layout_marginTop="29dp"
        android:id="@+id/View_name" />

    <TextView
        android:text="0556451052"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/back_phon"
        android:layout_marginTop="34dp"
        android:id="@+id/View_mobile" />

    <TextView
        android:text="ahmed@yahoo.com"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/back_mail"
        android:id="@+id/View_mail"
        android:layout_marginTop="31dp" />


</LinearLayout>
