<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.com.newnav1.ForgotPasswordActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="نسيت كلمة المرور"
        android:textAlignment="center"
        android:textColor="#0c38d9"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/background_dark"
        android:drawableRight="@drawable/mail_black"
        android:ems="10"
        android:hint="البريد الإلكتروني"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="18dp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:text="موافق"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_dark"
        android:drawableRight="@drawable/pass_black"
        android:ems="10"
        android:hint="رمز الدخول"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textColorHint="@android:color/background_light"
        android:textSize="18dp" />

    <Button
        android:id="@+id/ok1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:text="موافق"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_orange_dark"
        android:text="لم يصل الرمز أعد الإرسال"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textSize="18dp" />

</LinearLayout>
