<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.com.newnav1.MyAccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/side_menu_logo" />

    <EditText
        android:id="@+id/View_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:background="@drawable/back_nam"
        android:gravity="center"
        android:hint="الإسم"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/View_ShopName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:background="@drawable/back_nam"
        android:gravity="center"
        android:hint="إسم المتجر"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/View_mobile"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:background="@drawable/back_phon"
        android:gravity="center"
        android:hint="الهاتف"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/View_mail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:background="@drawable/back_mail"
        android:gravity="center"
        android:hint="البريد الإلكتروني"
        android:textSize="20dp" />

</LinearLayout>
