<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.newnav1.LoginActivity">

    <TextView
        android:text="تسجيل الدخول"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_height="50dp"
        android:background="@android:color/background_dark"
        android:hint="كلمة المرور"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:drawable/screen_background_light"
        android:textAlignment="center"
        android:drawableRight="@drawable/pass_black"
        android:textSize="18dp"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etMail"
        android:layout_alignLeft="@+id/etMail"
        android:layout_alignStart="@+id/etMail"
        android:layout_marginTop="32dp" />

    <Button
        android:text="تسجيل الدخول"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:drawable/screen_background_light"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@android:color/background_dark"
        android:inputType="textPersonName"
        android:hint="البريد الإلكتروني"
        android:drawableRight="@drawable/mail_black"
        android:textColorHint="@android:color/background_light"
        android:textAlignment="center"
        android:textColor="@android:drawable/screen_background_light"
        android:textSize="18dp"
        android:ems="10"
        android:id="@+id/etMail"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="تسجيل عضوية جديدة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:textSize="12dp"
        android:id="@+id/text_new_user"
        android:layout_alignBaseline="@+id/text_forget"
        android:layout_alignBottom="@+id/text_forget"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="نسيت كلمة المرور"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:textSize="12dp"
        android:layout_marginTop="38dp"
        android:id="@+id/text_forget"
        android:layout_below="@+id/btn_login"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

</RelativeLayout>
